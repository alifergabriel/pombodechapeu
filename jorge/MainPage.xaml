<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jorge.MainPage"
             Shell.NavBarIsVisible="false">

   
        <Grid>
              <Grid.GestureRecognizers>
                     <TapGestureRecognizer Tapped="OnGridClicked"/>
              </Grid.GestureRecognizers>
            <Image Source="shereka.png"
                   x:Name="Shereka"
                   Aspect="Fill"/>

            <Image Source="bigas.png"
                   x:Name="Bigas"
                     HeightRequest="50"
                     WidthRequest="50"
                     HorizontalOptions="Start"
                      VerticalOptions="Center"/>

            <Image Source="canoalto.png"
                   x:Name="CanoCima"
                     Aspect="Fill"
                     HeightRequest="620"
                     WidthRequest="50"
                     HorizontalOptions="End"
                     VerticalOptions="Start"/>

                <Image Source="canobaixo.png"
                       x:Name="CanoBaixo"
                      VerticalOptions="Start"
                     Margin="0,0,0,20"
                     Aspect="Fill"
                     HorizontalOptions="End"
                     HeightRequest="620"
                     WidthRequest="50"/>

                     <Frame HorizontalOptions="End"
                     VerticalOptions="Start"
                     Margin="0,10,10,0"
                     BackgroundColor="Grey">
              <Label x:Name="labelPontuacao"/>
              
              </Frame>

                <Image Source="ai.jpg"
                       x:Name="Aai"
                     VerticalOptions="End"
                     HorizontalOptions="Fill"
                     Aspect="Fill"
                     HeightRequest="50"/>

            <Frame x:Name="FrameGameOver"
                   BackgroundColor="#99000000"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill">
                <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGameOverClicked"/>
                     </Frame.GestureRecognizers>
            </Frame>
        </Grid>

</ContentPage>

