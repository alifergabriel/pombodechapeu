             x:Class="jorge.MainPage"
             Shell.NavBarIsVisible="false">


    <Grid>

        <!-- Imagem de fundo-->

        <Image Source="shereka.png"
               VerticalOptions="Fill"
               HorizontalOptions="Fill"/>

        <!-- Imagem do personagem-->

        <Image Source="bigas.png"
               x:Name="Bigas"
               HeightRequest="50"
               WidthRequest="50"
               HorizontalOptions="Start"/>

        <!-- Imagem dos postes-->

        <Image Source="chico(cano).png"
               VerticalOptions="Start"
               HorizontalOptions="End"/>

        <!-- Imagem dos postes-->

        <Image Source="chico(cano baixo).png"/>

        <!-- Imagem do chão-->

        <Image Source="meu nome é yoshikage kira, tenho 33 anos de iade e moro na parte suldeste de morio, vivo uma vida tranquila.....png"
               VerticalOptions="EndAndExpand"
               HeightRequest="600"
               WidthRequest="1000"/>

        <!-- Frame de game over-->

        <Frame IsVisible="true">

            <!-- Tela de game over-->

            <Image Source=".png"/>

        </Frame>

    </Grid>

</ContentPage>
